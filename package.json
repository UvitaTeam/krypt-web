{
  "name": "@vivy/krypt-web",
  "version": "1.0.6",
  "description": "Vivy GmbH crypto library used for encryption/decryption in browser",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/VivyTeam/krypt-web.git"
  },
  "license": "MIT",
  "scripts": {
    "build:package": "pack build",
    "deploy:documentation": "jsdoc src/lib && git-directory-deploy --directory out/",
    "linter:check": "eslint src/**/*.js",
    "test": "karmatic",
    "test:watch": "karmatic watch"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-standard-pkg",
        {
          "exclude": [
            "tests/**/*"
          ]
        }
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-build-web"
      ],
      [
        "@pika/plugin-build-types"
      ]
    ]
  },
  "dependencies": {
    "scrypt-async": "2.0.1"
  },
  "devDependencies": {
    "@pika/pack": "^0.3.7",
    "@pika/plugin-build-node": "^0.3.16",
    "@pika/plugin-build-types": "^0.3.16",
    "@pika/plugin-build-web": "^0.3.16",
    "@pika/plugin-standard-pkg": "^0.3.16",
    "eslint": "^5.3.0",
    "eslint-config-vivy": "^1.0.6",
    "git-directory-deploy": "1.5.1",
    "husky": "1.3.1",
    "jsdoc": "^3.6.2",
    "karmatic": "^1.3.1",
    "prettier": "^1.16.1",
    "pretty-quick": "^1.10.0",
    "raw-loader": "2.0.0",
    "rimraf": "^2.6.3",
    "webpack": "^4.32.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run linter:check && npm test && pretty-quick --staged"
    }
  }
}
